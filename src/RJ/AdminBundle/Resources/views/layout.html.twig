<!DOCTYPE html>
<html>
<head>
    <title>Panel administracyjny {% block title %}{% endblock %}</title>
    <meta name="description" content="{% block description %}{% endblock %}">
    <meta name="keywords" content="{% block keywords %}{% endblock %}">
    <meta name="author" content="{% block author %}{% endblock %}">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="//code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    {% javascripts
    output='js/compiled/vendor.js'
    'js/vendor/*'%}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {# charts #}
    <script src="{{ asset('bundles/obhighcharts/js/highcharts/highcharts.js') }}"></script>
    <script src="{{ asset('bundles/obhighcharts/js/highcharts/modules/exporting.js') }}"></script>
    {# end charts #}

    {% stylesheets
    output='css/compiled/vendor.css'
    'css/vendor/*' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% stylesheets
    output='css/compiled/admin.css'
    'css/admin.less' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% block stylesheets %}{% endblock %}

    <script type="text/javascript">
    {% block javascripts %}{% endblock %}
    </script>
</head>
<body>
<div class="header-background"></div>
<div class="submenu-background"></div>
<div class="info-background"><span></span></div>
<section id="main-wrapper">
    <header>
        <div id="user-content">
            <div id="user-logged">
                {{ 'dialog.hello' | trans }} {{ app.user.firstName }} {{ app.user.lastName }}
            </div>
            <div id="user-message">
                <a href="">{{ 'dialog.youHave' | trans }} x {{ 'dialog.unreadedMessage' | trans }}</a>
            </div>
        </div>
        <a href="" class="unread-mail"><i class="fa fa-envelope"></i></a>
    </header>
    <nav id="main-menu">
        <ul>
            <li class="{% block menuDashboard %}{% endblock %}">
                <a class="text-strike" href="{{ path('rj_admin_homepage') }}"><i class="fa fa-home"></i> {{ 'adminBundle.menu.dashboard' | trans }}</a>
                <ul>
                    <li>
                        <a class="text-strike" href="">{{ 'adminBundle.menu.manageDashboard' | trans }} <i class="fa fa-dashboard"></i></a>
                    </li>
                    <li>
                        <a class="text-strike" href="">example 1 <i class="fa fa-caret-down"></i></a>
                    </li>
                    <li>
                        <a class="text-strike" href="">example 2 <i class="fa fa-caret-down"></i></a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="text-strike" href=""><i class="fa fa-group"></i> {{ 'adminBundle.menu.manageUsers' | trans }}</a>
            </li>
            <li class="{% block menuShop %}{% endblock %}">
                <a class="text-strike" href="{{ path('rj_shop_homepage') }}"><i class="fa fa-shopping-cart"></i> {{ 'adminBundle.menu.manageShop' | trans }}</a>
            </li>
            <li class="{% block menuCms %}{% endblock %}">
                <a class="text-strike" href=""><i class="fa fa-gears"></i> {{ 'adminBundle.menu.cms' | trans }}</a>
            </li>
            <li class="{% block menuSettings %}{% endblock %}">
                <a href="{{ path('rj_admin_settings_general') }}"><i class="fa fa-wrench"></i> {{ 'adminBundle.menu.settings.settings' | trans }}</a>
                <ul>
                    <li class="{% block submenuGeneral %}{% endblock %}">
                        <a href="{{ path('rj_admin_settings_general') }}">{{ 'adminBundle.menu.settings.general' | trans }}</a>
                    </li>
                    <li class="{% block submenuCategory %}{% endblock %}">
                        <a href="{{ path('rj_admin_settings_category') }}">{{ 'adminBundle.menu.settings.category' | trans }}</a>
                    </li>
                    <li>
                        <a class="text-strike" href="">{{ 'adminBundle.menu.settings.modules' | trans }}</a>
                    </li>
                </ul>
            </li>
            <li id="logout">
                <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i></a>
            </li>
            <li id="server-management">
                <a class="text-strike" href=""><i class="fa fa-medkit"></i></a>
            </li>
            <li id="admin-messages">
                <a class="text-strike" href=""><i class="fa fa-envelope"></i></a>
            </li>
        </ul>
    </nav>
    <section id="info">
        {{ 'dialog.yeasterday' | trans }}:
        <ul>
            <li>{{ 'dialog.visits' | trans }}:<i class="fa fa-arrow-up"></i> 123</li>
            <li>{{ 'dialog.uniqueVisits' | trans }}:<i class="fa fa-arrow-up"></i> 100</li>
            <li>{{ 'dialog.bounceRate' | trans }}:<i class="fa fa-arrow-down"></i> 18.7 %</li>
        </ul>
    </section>

    <aside>
        {% block sidebar %}{% endblock %}
    </aside>
    <section id="main-content" class="{% block mainContentMaxWidth %}{% endblock %}">
        {% block body %}{% endblock %}
    </section>
</section>
</body>
</html>